{
  "prompts": {
    "name": {
      "type": "string",
      "required": true,
      "label": "Project name"
    },
    "description": {
      "type": "string",
      "required": true,
      "label": "Project description",
      "default": "A Vue.js project"
    },
    "author": {
      "type": "string",
      "label": "Author"
    },
    "cssToolkit": {
      "type": "confirm",
      "label": "Add a CSS toolkit?"
    },
    "cssToolkitConfig": {
      "when": "cssToolkit",
      "type": "list",
      "message": "Pick a CSS toolkit",
      "choices": [
        "basscss",
        "bootstrap",
        "none"
      ]
    }
  },
  "completeMessage": "To get started:\n\n  cd {{destDirName}}\n  npm install\n  npm run dev"
}