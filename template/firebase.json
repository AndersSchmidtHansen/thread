{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "/",
    "ignore": [
      "firebase.json",
      "README.md",
      ".babelrc",
      ".gitignore",
      "webpack.config.js",
      "package.json",
      "src",
      "**/node_modules/"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
